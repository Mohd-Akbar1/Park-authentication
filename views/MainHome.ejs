<%- include('./layouts/header') %>
<div class=" container-fluid bg-light  " style="min-height: 100vh;">
    <div class="container p-5 " style="width: 35vw;">
        <form  class="form-control " action="/login" method="post">
            <h1 class="text-center">Loggin</h1>
            <hr>
            <div class="row m-3 ">
              <label for="inputEmail3" class="col-sm-3 col-form-label">Email</label>
              <div class="col-sm-8">
                <input type="email" class="form-control" id="inputEmail3" name="email">
              </div>
            </div>
            <div class="row m-3">
              <label for="inputPassword3" class="col-sm-3 col-form-label">Password</label>
              <div class="col-sm-8">
                <input type="password" class="form-control" id="inputPassword3" name="password">
              </div>
            </div>
            <fieldset class="row m-3">
              <legend class="col-form-label col-sm-3 pt-0">Login as</legend>
              <div class="col-sm-5">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="Admin" checked>
                  <label class="form-check-label" for="gridRadios1">
                    Admin
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="Staff">
                  <label class="form-check-label" for="gridRadios2">
                    Staff
                  </label>
                </div>
               
              </div>
            </fieldset>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-50 m-3 ">Logg in</button>
            </div>
            
            
          </form>
          <a href="/register" class="d-flex justify-content-center m-2"><button class="btn btn-success ">Register for admin</button></a>
    </div>
</div>






<%- include('./layouts/footer') %>

    
